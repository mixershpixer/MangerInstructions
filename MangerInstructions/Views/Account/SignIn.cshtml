@model MangerInstructions.ViewModel.LoginUser
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["SignIn"];
}

<partial name="_ValidationScriptsPartial" />
<div class="row text-center">
    <h3>@Localizer["SignInWithEmail"]</h3>
</div>
<div>
    <div class="container  col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4">
        <div class="row">
            <form asp-action="SignIn" asp-controller="Account" asp-anti-forgery="true" method="post">
                <div>
                    <div class="form-group col-sm-12">
                        <label>Email:</label>
                        <input class="form-control" type="text" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger" />
                    </div>
                    <div class="form-group col-sm-12">
                        <label>@Localizer["Password"]:</label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger" />
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-sm-12">
                        <input class="btn btn-default" type="submit" value="@Localizer["SignIn"]" />
                        @Localizer["Or"] <a asp-action="CreateAccount" asp-controller="Account">@Localizer["CreateAccount"]</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-12">
            <div class="row text-center">
                <h3>@Localizer["SignInWithSocial"]</h3>
            </div>
            @foreach (var item in ViewBag.Scheme)
            {
                <a class="btn btn-primary col-xs-12 col-sm-12 col-md-12 col-lg-12" asp-area="" asp-action="SignInSocial"
                   asp-controller="Account" asp-route-provider="@item">@item</a>
                <hr />
            }
        </div>
    </div>
</div>
